{{/each}}
  </ul>

  <ul class="days">
    <li style="margin: ;">
      {{#each monday}}
      <br> {{waiters}} <br>
      {{/each}}
      <button class="clear_button"><a href="/resets/Monday" class="link" name="mon" > Clear </a></button>
    </li>
    <li>
      {{#each tuesday}}
      <br> {{waiters}} <br>
      {{/each}}
      <button class="clear_button"><a href="/resets/Tuesday" class="link" name="tues"> Clear </a></button>
    </li>
    <li>
      {{#each wednesday}}
      <br> {{waiters}} <br>
      {{/each}}
        <button class="clear_button"><a href="/resets/Wednesday" class="link" name="wed"> Clear </a></button>
    </li>
    <li>
      {{#each thursday}}
      <br> {{waiters}} <br>
      {{/each}}
        <button class="clear_button"><a href="/resets/Thursday" class="link" name="thurs"> Clear </a></button>
    </li>
    <li>
      {{#each friday}}
      <br> {{waiters}} <br>
      {{/each}}
        <button class="clear_button"><a href="/resets/Friday" class="link" name="fri"> Clear </a></button>
    </li>
    <li>
      {{#each saturday}}
      <br> {{waiters}} <br>
      {{/each}}
        <button class="clear_button"><a href="/resets/Saturday" class="link" name="sat"> Clear </a></button>
    </li>
    <li>
      {{#each sunday}}
      <br> {{waiters}} <br>
      {{/each}}
        <button class="clear_button"><a href="/resets/Sunday" class="link" name="sun"> Clear </a></button>
