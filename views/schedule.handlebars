{{!-- </form> --}}
  <button type="submit" style="margin-left: 30% ;"> <a href="/logout" class="link"> Logout </a> </button>

  <button type="submit" style="margin-left: 30% ;"> <a href="/resets/all" class="link"> Clear All </a> </button>

  {{#if messages.sukuna}}
  <div class="codeMsg">{{messages.sukuna}}</div>
  {{/if}}

</div>
  <script>

    setTimeout(function () {
      document.querySelector(".codeMsg").innerHTML = ""
    }, 6000);

    const addColor = document.querySelector("#addColor");

    var add = addColor.length

    if (add >= 2) {
      // adding the danger class will make the text red
      addColor.classList.add("danger");
    }
    else if (add >= 1) {
      addColor.classList.add("warning");
    }
    
  </script>

